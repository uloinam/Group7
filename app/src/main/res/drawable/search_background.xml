<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Nền của thanh tìm kiếm -->
    <solid android:color="#FFFFFF" />

    <!-- Đường viền của thanh tìm kiếm -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" />

    <!-- Góc bo tròn cho thanh tìm kiếm -->
    <corners android:radius="16dp" />

    <!-- Đổ bóng -->
    <padding
        android:left="8dp"
        android:right="8dp" />
</shape>
