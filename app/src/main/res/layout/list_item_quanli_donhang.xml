<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:layout_height="150dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_bills_od"
        app:cardCornerRadius="30dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="130dp"
                android:src="@drawable/ic_launcher_background"
                android:id="@+id/img_sp_donhang"
                android:layout_height="130dp"/>
            <TextView
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:id="@+id/tv_ma_donhang"
                android:layout_toRightOf="@+id/img_sp_donhang"
                android:layout_marginHorizontal="10dp"
                android:text="Ma sản phẩm: abc123"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:id="@+id/tv_total_price"
                android:layout_below="@+id/tv_ma_donhang"
                android:layout_toRightOf="@+id/img_sp_donhang"
                android:layout_marginHorizontal="10dp"
                android:text="Tổng tiền: 9999999"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_date_bill"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:text="Date"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_below="@id/tv_ma_donhang"
                android:layout_toRightOf="@id/img_sp_donhang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txtShowMoreBills"
                android:text="Show More -->"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="50dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>