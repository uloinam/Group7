<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:layout_marginHorizontal="15dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="8dp">

                <!-- Details Text -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvMaOrderTD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mã đơn hàng: #12345"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvOrderDateDT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngày đặt: 2024-11-19"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvOrderQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số lượng: 3"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvOrderPriceDT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giá tiền: 450,000 VNĐ"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvShippingFeeDT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phí vận chuyển: 30,000 VNĐ"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="4dp" />

<!--                    <TextView-->
<!--                        android:id="@+id/tvDiscountDT"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="Giảm giá: 50,000 VNĐ"-->
<!--                        android:textSize="16sp"-->
<!--                        android:textColor="#333333" />-->
                </LinearLayout>

                <!-- Product Image -->
                <ImageView
                    android:id="@+id/imgOrderProductDT"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/img_2"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

            <!-- Total Amount -->
            <TextView
                android:id="@+id/tvTotalAmountDT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:gravity="end"
                android:layout_marginHorizontal="10dp"
                android:background="#FFFFFF"
                android:text="Tổng tiền: 430,000 VNĐ"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>