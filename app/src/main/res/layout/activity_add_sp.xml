<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.AddSP">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ffff"
        android:id="@+id/relative"
        android:layout_height="100dp">
        <ImageView
            android:layout_width="40dp"
            android:id="@+id/img_back_screen_admin"
            android:src="@drawable/back"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="5dp"
            android:layout_alignParentLeft="true"
            android:layout_height="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Thêm sản phẩm"
            android:id="@+id/tvtitleaddsp"
            android:layout_marginTop="50dp"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:fillViewport="true"
        android:layout_height="0dp">

<LinearLayout
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="200dp"
        android:src="@drawable/anhsp"
        android:id="@+id/img_sp"
        android:layout_height="230dp"/>
    <EditText
        android:layout_margin="10dp"
        android:hint="Tên sản phẩm:"
        android:layout_width="match_parent"
        android:id="@+id/name_sp"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_marginHorizontal="10dp"
        android:hint="Giá:"
        android:layout_width="match_parent"
        android:inputType="number"
        android:id="@+id/price_sp"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:hint="Size:"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:background="@drawable/border"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:layout_width="20dp"
                android:id="@+id/chk_size_s"
                android:layout_height="20dp"/>
            <TextView
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="S"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="5dp"
            android:background="@drawable/border"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:layout_width="20dp"
                android:id="@+id/chk_size_m"
                android:layout_height="20dp"/>
            <TextView
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="M"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/border"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:layout_width="20dp"
                android:id="@+id/chk_size_l"
                android:layout_height="20dp"/>
            <TextView
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="L"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/border"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:layout_width="20dp"
                android:id="@+id/chk_size_xl"
                android:layout_height="20dp"/>
            <TextView
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="XL"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/border"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:layout_width="20dp"
                android:id="@+id/chk_size_xxl"
                android:layout_height="20dp"/>
            <TextView
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="XXL"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/layout_edittexts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"/>
    
    <EditText
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:hint="Số lượng:"
        android:id="@+id/quantity_sp"
        android:inputType="number"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/description_sp"
        android:layout_margin="10dp"
        android:gravity="top"
        android:hint="Mô tả:"
        android:layout_height="150dp"/>
    <Button
        android:layout_width="wrap_content"
        android:id="@+id/btn_add"
        android:text="Thêm sản phẩm"
        android:textSize="20sp"
        android:layout_height="wrap_content"/>
</LinearLayout>
    </ScrollView>

</LinearLayout>