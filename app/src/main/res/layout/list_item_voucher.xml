<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <androidx.cardview.widget.CardView
        android:background="@color/white"
        app:cardElevation="6dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Mã Voucher -->
            <TextView
                android:id="@+id/tv_ma_voucher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã: SAVE20"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp" />

            <!-- Giá trị giảm giá -->
            <TextView
                android:id="@+id/tv_gia_tri_giam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_ma_voucher"
                android:layout_marginTop="8dp"
                android:text="Giảm: 20% (Tối đa 100k)"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <!-- Điều kiện áp dụng -->
            <TextView
                android:id="@+id/tv_dieu_kien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_gia_tri_giam"
                android:layout_marginTop="8dp"
                android:text="Áp dụng cho đơn hàng từ 300k trở lên"
                android:textColor="#818181"
                android:textSize="14sp" />

            <!-- Thời hạn -->
            <TextView
                android:id="@+id/tv_thoi_han"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_dieu_kien"
                android:layout_marginTop="8dp"
                android:text="thời gian sử dụng:\n1/11/2024 - 1/12/2024"
                android:textColor="#ff00"
                android:textSize="14sp" />

            <!-- Nút sử dụng -->
            <Button
                android:id="@+id/btn_su_dung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:backgroundTint="#303F9F"
                android:text="Sử dụng"
                android:textColor="@color/white"
                android:textSize="14sp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/delete"
                    android:id="@+id/img_delete_vc"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>