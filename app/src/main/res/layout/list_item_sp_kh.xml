<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="20dp"
        android:layout_width="170dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="20dp"
                android:layout_width="match_parent"
                android:id="@+id/card_sp_kh"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:id="@+id/img_sp_kh"
                    android:src="@drawable/ic_launcher_background"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_below="@+id/card_sp_kh"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:id="@+id/tv_name_sp_kh"
                android:text="áo này màu đỏ rất là đẹp luôn"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_below="@+id/tv_name_sp_kh"
                android:layout_width="wrap_content"
                android:id="@+id/tv_price_sp_kh"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:textColor="#ff00"
                android:text="đ150.000"
                android:layout_height="wrap_content"/>
            <View
                android:id="@+id/overlay"
                android:elevation="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80636363"
                android:visibility="gone"/>
        </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        app:cardCornerRadius="50dp"
        android:layout_gravity="center"
        android:id="@+id/tv_hethang"
        android:visibility="visible"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="90dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="Hết hàng"
            android:elevation="11dp"
            android:textSize="20sp"
            android:layout_height="90dp"/>
    </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
