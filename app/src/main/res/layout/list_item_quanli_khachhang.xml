<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:paddingVertical="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:layout_width="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="7dp"
                android:id="@+id/chk_hidden_kh"
                android:layout_height="20dp"/>

            <ImageView
                android:id="@+id/img_avata_quanlikh"
                android:layout_marginVertical="10dp"
                android:src="@drawable/ic_launcher_background"
                android:layout_toRightOf="@+id/chk_hidden_kh"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <TextView
                android:layout_width="match_parent"
                android:text="Tên: Long"
                android:id="@+id/tv_ten_kh"
                android:layout_margin="10dp"
                android:layout_toRightOf="@+id/img_avata_quanlikh"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginHorizontal="10dp"
                android:id="@+id/tv_sdt_kh"
                android:layout_below="@+id/tv_ten_kh"
                android:layout_toRightOf="@+id/img_avata_quanlikh"
                android:text="SĐT: 0123456789"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/tv_address_kh"
                android:layout_below="@+id/tv_sdt_kh"
                android:layout_toRightOf="@+id/img_avata_quanlikh"
                android:text="ngày sinh: 7-11-2005"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>